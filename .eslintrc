{
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-trailing-spaces": [
      2,
      {
        "skipBlankLines": false 
      }
    ],
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "consistent-return": 2,
    "curly": 2,
    "dot-location": [2, "property"],
    "guard-for-in": 2,
    "no-extra-bind": 2
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "extends": "eslint:recommended"
}
